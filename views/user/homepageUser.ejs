<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User</title>
</head>

<body>
    <!--Carousel Wrapper-->
    <div id="demo-carous" class="carous slide" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
        </ul>


        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/image/sale1.png" alt="Los Angeles" width="60%" height="220px">
            </div>
            <div class="carousel-item">
                <img src="/image/sale2.png" alt="Chicago" width="60%" height="220px">
            </div>
            <div class="carousel-item">
                <img src="/image/sale1.png" alt="New York" width="60%" height="220px">
            </div>
        </div>


        <!-- <div class="img_display">
        <img src="/image/sale1.png" alt="haha" width="50px">
    </div> -->
    </div>




    <p class="text-center"></p>
    <div class=" container-fluid fluid">

        <div class="row px-2">
            <% for(var i=0; i < data.length; i++) { %>
                <div class="col-3 mt-5">
                    <div class="gallery">
                        <img src="<%= data[i].image %>" width="600" height="400">
                        <div class="desc">
                            <%= data[i].name %>
                        </div>
                        <hr>
                        <div class="my-2 mx-2 text-center">
                            <button class="btn btn-sm btn-primary detailBtn" item="<%= JSON.stringify(data[i]) %>">View Details</button>
                            <button class="btn btn-sm btn-success addToCardBtn">Add to Cart</button>
                            <a href="/auth/welcome" type="button" class="btn btn-sm btn-danger registerBtn">Sign up to Continue</a>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>

    </div>

    <!-- modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered " role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Item Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body item-details">
                    <!-- container -->
                    <p id="itemName"></p>
                    <img id="itemImage" src="" width="450" height="auto" alt="photo">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <!-- end modal -->
    <div class="clearfix"></div>

</body>

</html>